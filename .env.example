# Configuration EXPERTS IA - Exemple de variables d'environnement
# IMPORTANT: Renommer ce fichier en .env et configurer avec vos vraies valeurs

# === CLÉS API ===
# Clé API Anthropic (OBLIGATOIRE)
ANTHROPIC_API_KEY=sk-ant-api03-VOTRE_CLE_API_ANTHROPIC

# === SÉCURITÉ ===
# Mot de passe d'accès à l'application (OBLIGATOIRE pour la production)
APP_PASSWORD=votre_mot_de_passe_securise

# === CONFIGURATION APPLICATION ===
# Limite de taille de fichier en MB
MAX_FILE_SIZE_MB=50

# Mode debug (true/false)
ENABLE_DEBUG=false

# Niveau de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Port de l'application (pour Render, utiliser automatiquement $PORT)
PORT=8501

# === CONFIGURATION DATABASE ===
# Clé de chiffrement pour la base de données (32 caractères)
DATABASE_ENCRYPTION_KEY=votre_cle_chiffrement_32_caracteres

# === SÉCURITÉ AVANCÉE ===
# Nombre maximum de tentatives de connexion par heure
MAX_LOGIN_ATTEMPTS=5

# Durée de blocage après tentatives échouées (en minutes)
LOCKOUT_DURATION=30

# Activer les logs de sécurité détaillés
ENABLE_SECURITY_LOGGING=true

# === DÉVELOPPEMENT LOCAL ===
# Activer le mode développement (permet plus de debug)
DEV_MODE=false